<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Newfie Nook</title>
  <link rel="stylesheet" href="/styles/index.css">
</head>
<%- include('./partials/header.ejs') %>
<body>
  <%- include('./partials/nav.ejs') %>
  <div class = "home"> <br>
  <div class="customer-content">
    <h2>Customer:</h2>
    <% if (aCustomer && aCustomer.length > 0) { %>
        <% aCustomer.forEach(function(aCustomer) { %>
          <h3>
            <b>Name:</b> <%= aCustomer.first_name %> <%= aCustomer.last_name %> <br>
            <b>Email:</b> <%= aCustomer.email %><br>
            <b>Username:</b> <%= aCustomer.username %> <br>
            <b>Password:</b> <%= aCustomer.password %> <br>
            <b>Address: </b> <%= aCustomer.address %><br>
            <b>Payment Method:</b> <%= aCustomer.payment_method %><br>
          </h3> 
        <% }) %>
    <% } else { %>
        <p>No customer found</p>
    <% } %>
  </div>
<div class = "buttonDiv">
  <% if (aCustomer) { %>
    <a href="/customer/edit/<%= aCustomer.customer_id %>">Edit Customer</a>
    <a href ="/customer/delete/<%= aCustomer.customer_id %>">Delete Customer</a> 
  <% } %>
  <br><br>
  <a href="/customers/" class="button">All Customers</a>
</div>
</div>
</body>
<%- include('./partials/footer.ejs') %>
</html>
